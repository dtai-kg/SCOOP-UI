@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix transit: <http://vocab.org/transit/terms/> .
@prefix wgs84_pos: <http://www.w3.org/2003/01/geo/wgs84_pos#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

<http://example.com/ns##AirportMapping/shape> a sh:NodeShape ;
    sh:class transit:Stop ;
    sh:nodeKind sh:IRI ;
    sh:pattern "http://airport.example.com/.*" ;
    sh:property [ sh:nodeKind sh:Literal ;
            sh:path wgs84_pos:lat ],
        [ sh:datatype xsd:int ;
            sh:nodeKind sh:Literal ;
            sh:path transit:route ],
        [ sh:nodeKind sh:Literal ;
            sh:path wgs84_pos:long ] ;
    sh:targetClass transit:Stop .

